---
import Page from '../layouts/Page.astro'
import Navigation from '../components/Navigation.astro'
import AboutMe from '../components/about/AboutMe.astro'
import Experience from '../components/about/Experience.astro'
import RecentProjects from '../components/projects/RecentProjects.astro'
import SkillSelector from '../components/about/SkillSelector'
import { skills } from '../assets/skills'

const hobbies = [
    {
        title: "Photography",
        background: "\"https://images.pexels.com/photos/12882429/pexels-photo-12882429.jpeg\"",
        url: "https://www.flickr.com/tmaterne/"
    },
    {
        title: "Painting",
        background: "https://images.squarespace-cdn.com/content/5942c23d8419c2dea969941a/1594788901787-3H2JUWI1097AF8HV6OMI/YT_PWMChallenge.png?content-type=image%2Fpng",
        url: "https://pin.it/6j3Ka81sa"
    }, {
        title: "Music",
        background: "https://preview.redd.it/started-a-vinyl-collection-in-september-its-grown-very-fast-v0-n2xm1g3iz7dc1.jpeg?width=1080&crop=smart&auto=webp&s=c055e82d09fdff2d230486115176ef0771e9377d",
        url: "https://blends.blog/music"
    }, {
        title: "Badminton",
        background: "https://www.westtorrens.sa.gov.au/files/content/public/v/2/events-directory/come-and-try-badminton-session-a/badminton.png?w=1200",
        url: null
    }
]

export const prerender = false;
---

<Page title="About Me" description="Read to find out about what I'm currently working on, my professional experience and personal projects, and what my aspirations are for the future" keywords={["about", "resume", "hobbies", "tech journey", "minecraft plugins advanced", "becoming software engineer"]} canonical='https://forbit.dev/about'>
    <Navigation home={false} />
    <main class="center center-wide stack">
        <section id="info">
            <h2>About Me</h2>
            <AboutMe more={false} />
        </section>
        <section id="experience">
            <h2>My Journey</h2>
            <div class="hide-mobile">
                <Experience types={['learning', 'hobby', 'professional']} sort={'earliest'} mode={'middle'} />
            </div>
            <div class="hide-desktop">
                <Experience types={['learning', 'hobby', 'professional']} sort={'earliest'} mode={'left'} />
            </div>
        </section>
        <section id="working-on">
            <h2>Recent Projects</h2>
            <div class="grid" style="padding: var(--space-sm);">
                <RecentProjects />
            </div>
        </section>
        <section id="hobbies">
            <h2>Hobbies</h2>
            <div class="grid grid-4" style="padding: var(--space-sm);">
            {Object.values(hobbies).map(({ title, background, url }) => (
            <a href={url}>
                <div class="hobby-card" style={`background-image: url(${background});`}>
                    <div class="hobby-overlay">
                        <h3>{title}</h3>
                    </div>
                </div>
            </a>
            ))}
            </div>
        </section>
        <section id="skillset">
            <h2>Skills</h2>
            <SkillSelector client:load skills={skills} />
        </section>
    </main>
</Page>

<style>
    .hide-mobile {
        display: none;
    }
    .hide-desktop {
        display: block;
    }
    @media (min-width: 1024px) {
        .hide-mobile {
            display: block;
        }
        .hide-desktop {
            display: none;
        }
    }

    .hobby-card {
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: var(--radius-md, 0.25rem);
        border: 1px solid var(--borders-primary);
        background-size: cover;
        background-position: center;
        height: 6rem;
    }

    .hobby-overlay {
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: var(--radius-md, 0.25rem);
    }

    .hobby-overlay h3 {
        font-size: 1.5rem;
        color: white;
        text-align: center;
        filter: drop-shadow(0 1px 1px rgba(0, 0, 0, 0.3));
    }
</style>
