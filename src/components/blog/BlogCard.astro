---
import type { Post } from '../../types'
interface Props {
    post: Post
}

const { post } = Astro.props
const relative_url = `${post.group}/${post.slug}`
---

<div class="p-3 rounded border-borders-primary border flex flex-col gap-2">
    <h3 class="text-base-text-primary" transition:name={'title-' + post.slug}>{post.title}</h3>
    <p class="text-base-text-subtle flex-grow">{post.description}</p>
    <div class="flex justify-center flex-row gap-2">
        <a href={`/blog/${relative_url}`} class="w-min">
            <button class="bg-base-accent-primary px-4 py-1 border-borders-secondary border rounded hover:bg-base-accent-secondary">Read</button>
        </a>
        {
            !!post.url && (
                <a href={post.url} class="w-min">
                    <button class="bg-base-accent-primary px-4 py-1 border-borders-secondary border rounded hover:bg-base-accent-secondary">Visit</button>
                </a>
            )
        }
    </div>
</div>
