---
import { Astronav, MenuItems, MenuIcon} from 'astro-navbar'
import { Image } from 'astro:assets';
import forbitLogo from "../assets/forbit-icon.png";
interface Props {
    home: boolean | null
}
const { home } = Astro.props;
---

<nav id="navbar" style={home ? "border-top: 1px solid var(--border)" : ""}>
    <Astronav>
        <div class="nav-title">
            {!home && <Image src={forbitLogo} alt="forbit logo" class="nav-logo"/>}
            <div class="menu-icon">
                <MenuIcon class="menu-icon-size" />
            </div>
        </div>
        <MenuItems class="menu-items">
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/projects">Projects</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/timeline">Timeline</a></li>
            </ul>
        </MenuItems>
    </Astronav>
</nav>

<style>
  nav {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    justify-content: center;
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
  }

  .nav-title {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    border-radius: 30%;
    width: 1.5rem;
    height: 1.5rem;
  }

  #navbar a {
    color: var(--fg);
    text-decoration: none;
    font-weight: 600;
    filter: none;
    transition: color var(--transition);
  }
  #navbar a:hover {
    color: var(--accent);
    filter: none;
  }

  .menu-icon {
    display: none;
  }

  .menu-icon-size {
    width: 1rem;
    height: 1rem;
  }

  .menu-items {
    display: none;
  }

  .nav-links {
    display: flex;
    flex-direction: row;
    gap: var(--space-lg);
    font-size: var(--text-lg);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  @media (max-width: 1023px) {
    nav {
      flex-direction: column;
    }
    .nav-title {
      width: 100%;
    }
    .menu-icon {
      display: block;
      margin-left: auto;
    }
    .nav-links {
      flex-direction: column;
      gap: var(--space-sm);
      padding-top: var(--space-sm);
    }
  }

  @media (min-width: 1024px) {
    .menu-items {
      display: flex;
    }
    .nav-title {
      width: max-content;
    }
  }
</style>

